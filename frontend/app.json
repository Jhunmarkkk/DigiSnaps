{
  "expo": {
    "name": "DigiSnaps",
    "slug": "DigiSnaps",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
      
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSCameraUsageDescription": "DigiSnaps needs access to your camera to take product photos.",
        "NSPhotoLibraryUsageDescription": "DigiSnaps needs access to your photos to upload product images."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.digi.snaps",
      "permissions": [
        "CAMERA",
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "DigiSnaps needs access to your photos to upload product images.",
          "cameraPermission": "DigiSnaps needs access to your camera to take product photos."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "b492891e-2c35-4d0a-bc6d-1f5ecda602ab"
      }
    }
  }
}
